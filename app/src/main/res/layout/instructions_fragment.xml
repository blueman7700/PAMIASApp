<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="650dp"
        android:background="@color/black_overlay"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="4pt" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/instructions"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorForeground"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="4pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Interaction, the first"
                android:textAlignment="center"
                android:textColor="?android:attr/colorForeground" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Interaction, the second"
                android:textAlignment="center"
                android:textColor="?android:attr/colorForeground" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Interaction, the third"
                android:textAlignment="center"
                android:textColor="?android:attr/colorForeground" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Interaction, the fourth"
                android:textAlignment="center"
                android:textColor="?android:attr/colorForeground" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Interaction, the fifth"
                android:textAlignment="center"
                android:textColor="?android:attr/colorForeground" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/solve_this_card"
                android:textColor="?android:attr/colorForeground"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/cardButtonTL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="190dp"
                        android:height="190dp"
                        android:insetLeft="16dp"
                        android:insetTop="16dp"
                        android:insetRight="16dp"
                        android:insetBottom="16dp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/cardButtonTR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="190dp"
                        android:height="190dp"
                        android:insetLeft="16dp"
                        android:insetTop="16dp"
                        android:insetRight="16dp"
                        android:insetBottom="16dp"
                        android:visibility="invisible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/cardButtonBL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="190dp"
                        android:height="190dp"
                        android:insetLeft="16dp"
                        android:insetTop="16dp"
                        android:insetRight="16dp"
                        android:insetBottom="16dp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/cardButtonBR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="190dp"
                        android:height="190dp"
                        android:insetLeft="16dp"
                        android:insetTop="16dp"
                        android:insetRight="16dp"
                        android:insetBottom="16dp"
                        android:visibility="invisible" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
